{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "GridHealth Schemas Index",
  "description": "Available JSON Schema files for GridHealth",
  "type": "object",
  "properties": {
    "schemas": {
      "type": "object",
      "properties": {
        "organization": {
          "type": "string",
          "description": "Organization schema file path",
          "default": "./organization.json"
        },
        "device": {
          "type": "string",
          "description": "Device schema file path",
          "default": "./device.json"
        },
        "health-metrics": {
          "type": "string",
          "description": "Health metrics schema file path",
          "default": "./health-metrics.json"
        }
      },
      "required": ["organization", "device", "health-metrics"]
    },
    "version": {
      "type": "string",
      "description": "Schema version",
      "default": "1.0.0"
    }
  },
  "required": ["schemas", "version"]
} 